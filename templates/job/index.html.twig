{% extends 'base.html.twig' %}
{% block title %}
	Offres d'emploi
{% endblock %}
{% block body %}
	<div class="container mt-4 mb-4">
		<div class="mt-4">{% include "partials/_bg_job_img.html.twig" %}"</div>

	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}

		{% if app.user.isVerified is same as false %}
			<h2 class="text-center mt-4 mb-4">Votre demande d'inscription est en cours d'approuvement. Veuillez-vous connecter ultérieurement.</h2>
		{% endif %}

		{% if app.user and is_granted("ROLE_CANDIDATE") %}
		
				<h1 class="text-center text-light bg-primary mb-3 mt-3" 
				style="border-radius: 15px; padding: 7px 2px; width: auto; position: absolute; top: 10%; left: 50%; transform: translateX(-50%); padding: 10px;">Mes offres d'emploi</h1>
					<div class="d-flex justify-content-between flex-wrap mt-4">
						{% for job in app.user.jobs %}
						<div class="card border-primary mb-3 me-3" style="width: 20rem;">
							<div class="card-header">Offre numéro
								{{ job.id }}</div>
							<div class="card-body">
								<h4 class="card-title">
									<a href="{{ path('job.show', {id: job.id}) }}">{{ job.title }}</a>
								</h4>
								<p class="card-text">{{ job.description|raw }}</p>
								<h5 class="mt-3 ms-2 text-dark">Créé le:
									{{ job.createdAt ? job.createdAt|date('Y-m-d') : '' }}</h5>
								<p>Auteur
									{{ job.author}}</p>
							</div>
						</div>
					{% endfor %}
			</div>
		{% endif %}
		<br><br><br>
	</div>
{% endblock %}
