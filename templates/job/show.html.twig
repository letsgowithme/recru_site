{% extends 'base.html.twig' %}
{% block title %}
	Offre d'emploi
	{{ job.title }}
{% endblock %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	<div
		class="container">

		{# {% if job.isPublished is same as true %} #}
		<h1 class="mt-4 mb-4 text-capitalize">{{ job.title }}</h1>
		{# {% if is_granted('ROLE_ADMIN') %}
				{% if job.isPublished is same as false %} #}
		{# <a href="{{ path('job.edit', {id: job.id}) }}" class="btn btn-danger">Modifier l'offre</a>
		    {% else %}
				<a href="{{ path('job.edit', {id: job.id}) }}" class="btn btn-danger">Modifier l'offre</a>
				{% endif %}
				{% endif %} #}

		<h5 class="mt-3 text-dark">Company:</h5>
		<p class="fs-5  text-capitalize">{{ job.company|raw }}</p>

		<h5 class="mt-3 text-dark">Location:</h5>
		<p class="fs-5">{{ job.location|raw }}</p>

		<h5 class="mt-3 text-dark">Description:</h5>
		<p class="fs-5">{{ job.description|raw }}</p>

		<h5 class="mt-3 text-dark">Salarie
			<span class="badge bg-primary mt-1">
				{{ job.salary }}</span>
		</h5>
		<h5 class="mt-3 mb-3 text-dark">Emploi de temps :
			<p class="fs-5 mt-3">{{ job.schedule }}</p>
		</h5>
		<h5 class="mt-3 text-dark">Créé:</h5>
		<p class="fs-4">{{ job.createdAt ? job.createdAt|date('Y-m-d H:i:s') : '' }}</p>

		<button class="btn btn-primary fs-5 fw-bold mb-5">
			<a href="{{ path('job.index') }}" class="text-decoration-none">Vers la liste d'offres d'emploi</a>
		</button>

	</div>
</div></div></div></div>{% endblock %}
