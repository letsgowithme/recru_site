{% extends 'base.html.twig' %}
{% block title %}
	Offres d'emploi
{% endblock %}
{% block body %}
	<div class="container mt-4">
	
			<div class="mt-4">{% include "partials/_bg_job_img.html.twig" %}"</div>
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{% if app.user.isVerified is same as false %}
			<h2 class="text-center mt-1 mb-2">Votre demande d'inscription est en cours d'approuvement. Veuillez-vous connecter ultérieurement.</h2>
		{% endif %}

		{% if app.user %}
		<div class="d-flex flex-wrap justify-content-between">
			<h1 class="text-center mb-4 page_title page_title_annonces px-4 bg-light" 
			style="color: #022a67;"
			{# style="border-radius: 15px; padding: 10px 2px; width: auto; position: absolute; top: 12%; left: 50%; transform: translateX(-50%); padding: 10px;"  #}
			>Mes annonces publiées
			</h1>
			<button class="btn text-light bg-primary mb-4" 
			{# style="border-radius: 15px; padding: 10px 2px; width: auto; position: absolute; top: 15%; left: 85%; transform: translateX(-50%); padding: 10px;" #}
			>
				<a href="{{ path('job.new') }}" class="text-decoration-none text-white"
				>Créer une annonce</a>
			</button>
			</div>
		{% endif %}

		<div class="d-flex flex-wrap mt-4">
			{% if app.user.jobs and app.user.isVerified is same as true %}
				{% for job in jobs %}
					<div class="card border-primary mb-3 me-3 bg-light" style="width: 20rem;">
						<div class="card-header text-dark">Offre numéro
							{{ job.id }}</div>
						<div class="card-body">
							<h4 class="card-title text-dark">
								<a href="{{ path('job.show', {id: job.id}) }}">{{ job.title }}</a>
							</h4>
							<h5 class="mt-3 ms-2 text-dark">Créé le:
								{{ job.createdAt ? job.createdAt|date('Y-m-d') : '' }}</h5>
							<p>Auteur
								{{ job.author}}</p>
						</div>
					</div>
				{% endfor %}
			{% endif %}
		<br>>
			<h4 class="text-center mb-4 page_title page_title_annonces px-4 mt-4 mb-4 bg-light" 
			style="color: #022a67; font-weight: bold;"> Les annonces attendent  de l'approuvement de l'administateur</h4>
			<div class="d-flex flex-wrap">
				{% for job in jobs %}
				    {% if job.isApproved is same as false %}
						<div class="card border-primary mb-3 me-3 bg-light" style="width: 20rem;">
						<div class="card-header text-dark">Offre numéro
							{{ job.id }}</div>
						<div class="card-body">
							<h4 class="card-title text-dark">
								<a href="{{ path('job.show', {id: job.id}) }}">{{ job.title }}</a>
							</h4>
							<h5 class="mt-3 ms-2 text-dark">Créé le:
								{{ job.createdAt ? job.createdAt|date('Y-m-d') : '' }}</h5>
							<p>Auteur
								{{ job.author}}</p>
						</div>
					</div>
         	{% endif %}
			{% endfor %}
				</div>
				</div>
	
	</div>
			<div class="text-center mb-4">
		<button class="btn btn-info mb-4" type="button">
			<a class="fs-4 text-light" href="#up" style="color: #d4c54c; text-decoration: none;">Ver le haut</a>
		</div>
		<br>
{% endblock %}
