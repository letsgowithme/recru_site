{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Modifier le profil</h1>

		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{% if app.user and is_granted('ROLE_CANDIDAT') %}

				{{ form_start(form) }}
		<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
				{{ form_label(form.firstname) }}
				{{ form_widget(form.firstname) }}
				<div class="form-error">
					{{ form_errors(form.firstname) }}
				</div>
			</div>
			<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
				{{ form_label(form.lastname) }}
				{{ form_widget(form.lastname) }}
				<div class="form-error">
					{{ form_errors(form.lastname) }}
				</div>
			</div>
		
			<div class="form-group hidden">
				{{ form_label(form.company) }}
				<br>
				<div class="choiceList-wrapper mb-4 hidden">
					{% for field in form.company %}
						<div style="min-width: 15%;">
							{{ form_widget(field) }}
							{{ form_label(field) }}
						</div>
					{% endfor %}
				</div>
			</div>
			
			<div class="form-group" style="font-size: 1.6rem;">
				{{ form_row(form.submit) }}
			</div>
			<br><br>
			{{ form_end(form) }}
			<br>
			{{ include('user/_delete_form.html.twig') }}
		
		<br>
	{% endif %}

</div>{% endblock %}
