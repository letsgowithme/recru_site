<form method="post" action="{{ path('user.delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn bg-danger text-light" style="position: absolute; right: 5%; top: 15%;">Supprimer le profile</button>
</form>
