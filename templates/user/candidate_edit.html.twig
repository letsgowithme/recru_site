{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Modifier le profil</h1>
		<div>
			{{ include('user/_delete_form.html.twig') }}
		</div>
		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{% if app.user and is_granted('ROLE_CANDIDATE') %}

			{{ form_start(cand_form) }}
			<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
				{{ form_label(cand_form.firstname) }}
				{{ form_widget(cand_form.firstname) }}
				<div class="form-error">
					{{ form_errors(cand_form.firstname) }}
				</div>
			</div>
			<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
				{{ form_label(cand_form.lastname) }}
				{{ form_widget(cand_form.lastname) }}
				<div class="form-error">
					{{ form_errors(cand_form.lastname) }}
				</div>
			</div>
			{{ form_start(cand_form) }}
			<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
				{{ form_label(cand_form.cvFilename) }}
				{{ form_widget(cand_form.cvFilename) }}
				<div class="form-error">
					{{ form_errors(cand_form.cvFilename) }}
				</div>
			</div>
			<br><br>
			{{ form_end(cand_form) }}
			<br><br><br><br>

			<br><br><br>
			<br>
		{% endif %}

	</div>
{% endblock %}
