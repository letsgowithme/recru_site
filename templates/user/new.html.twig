{% extends 'base.html.twig' %}

{% block title %}Créer l'utilisateur{% endblock %}

{% block body %}
< class="container">
    <h1>Créer le consultant</h1>
{% for message in app.flashes('warning') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}

   {{ form_start(form) }}

   {% if app.user and is_granted('ROLE_ADMIN') %} 
    
   
    <div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.email) }}
			{{ form_widget(form.email) }}
			<div class="form-error">
				{{ form_errors(form.email) }}
			</div>
		</div>
   <div class="form-group mb-4" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.plainPassword) }}
			{{ form_widget(form.plainPassword) }}
			<div class="form-error">
				{{ form_errors(form.plainPassword) }}
			</div>
		</div>
  <div class="form-group" style="font-size: 1.6rem;">
			 <button type="submit" class="btn btn-primary">Envoyer</button>
			</div>

		<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.firstname) }}
			{{ form_widget(form.firstname) }}
			<div class="form-error">
				{{ form_errors(form.firstname) }}
			</div>
		</div>
        <div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.lastname) }}
			{{ form_widget(form.lastname) }}
			<div class="form-error">
				{{ form_errors(form.lastname) }}
			</div>
		</div> 

  <div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.roles) }}
			{{ form_widget(form.roles) }}
			<div class="form-error">
				{{ form_errors(form.roles) }}
			</div>
		</div>
		<hr> 
        <div class="form-group">
			{{ form_label(form.isVerified) }}
			{{ form_widget(form.isVerified) }}
			<div class="form-error">
				{{ form_errors(form.isVerified) }}
			</div>

            {% endif %}
			
<br><br>
			{{ form_end(form) }}
<br>

    <a href="{{ path('home') }}">Accueil</a>

    </div>
{% endblock %}
